
.nested-fields
	.row
		.col-xs-8
			= f.input :title, label: false, placeholder: "Title", input_html: { class: "form-input" "form-control" }
		.col-xs-2
			= f.input :user_id, label: false, input_html: { class: "form-input" "form-control" }
		.col-xs-2
			= link_to_remove_association "Remove", f, class: "btn btn-default"
