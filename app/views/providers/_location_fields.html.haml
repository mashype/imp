.nested-fields
	.row
		.col-xs-3
			= f.input :add_1, label: false, placeholder: "Address 1", input_html: { class: "form-input" "form-control" }
		.col-xs-2
			= f.input :add_2, label: false, placeholder: "Address 2", input_html: { class: "form-input" "form-control" }
		.col-xs-2
			= f.input :city, label: false, placeholder: "City", input_html: { class: "form-input" "form-control" }
		.col-xs-1
			= f.input :state, label: false, placeholder: "State", input_html: { class: "form-input" "form-control" }
		.col-xs-2
			= f.input :zip, label: false, placeholder: "Zip", input_html: { class: "form-input" "form-control" }		
		.col-xs-2
			= link_to_remove_association "Remove", f, class: "btn btn-default"

