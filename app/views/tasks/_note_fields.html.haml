.nested-fields
	.row
		.col-xs-8
			= f.input :content, label: false, placeholder: "Enter Note Here", input_html: { class: "form-control" }
		.col-xs-2
			=f.association :user, label: false, placeholder: "Assigned User", label_method: :email, value_method: :id, include_blank: true, :input_html => {:class => "input-small"}
		.col-xs-2
			= link_to_remove_association "Remove", f, class: "form-button btn btn-default"

        